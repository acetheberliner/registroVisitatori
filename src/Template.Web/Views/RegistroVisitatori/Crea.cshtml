@model Template.Web.Models.Visitatore
@{
    ViewData["Title"] = "Nuovo Visitatore";
    Layout = "_LayoutHtml";
}

<div class="container mt-5">
    <h2 class="fw-bold mb-4 text-dark">Registra Nuovo Visitatore</h2>

    <form asp-action="Crea" method="post" class="row g-3">
        <div class="col-md-6">
            <label class="form-label">Nome</label>
            <input asp-for="Nome" class="form-control" placeholder="Mario" />
        </div>
        <div class="col-md-6">
            <label class="form-label">Cognome</label>
            <input asp-for="Cognome" class="form-control" placeholder="Rossi" />
        </div>
        <div class="col-md-6">
            <label class="form-label">Azienda</label>
            <input asp-for="Azienda" class="form-control" placeholder="Azienda XYZ" />
        </div>
        <div class="col-md-6">
            <label class="form-label">Motivo Visita</label>
            <input asp-for="MotivoVisita" class="form-control" placeholder="Colloquio, consegna..." />
        </div>

        <div class="col-12 d-flex justify-content-between">
            <a href="/RegistroVisitatori" class="btn btn-outline-secondary">Annulla</a>
            <button type="submit" class="btn btn-success">
                <i class="fa-solid fa-check"></i> Salva Visitatore
            </button>
        </div>
    </form>
</div>
